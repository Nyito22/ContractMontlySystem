@model ContractMontlySystem.Models.Login
@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<header>
    <h2 class="page-heading">Contract Monthly Claim System</h2>
</header>

<div class="LandingMessage">
    <h1>Welcome Back</h1>
    <p>Please enter your login details to access your dashboard.</p>
</div>

<div class="FormContainer">
    <form asp-action="Login" method="post" class="LoginForm">
        <p>
            Don't have an account yet?
            <a href="@Url.Action("Register", "Home")">Click here</a> to register
        </p>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <label asp-for="Email"></label>
        <input asp-for="Email" placeholder="Enter your email" />
        <span asp-validation-for="Email" class="text-danger"></span>

        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" placeholder="Enter your password" />
        <span asp-validation-for="Password" class="text-danger"></span>

        <label asp-for="Role"></label>
        <select asp-for="Role">
            <option value="">-- Choose your role --</option>
            <option value="Lecture">Lecture</option>
            <option value="ProgrammeCoordinator">Programme Coordinator</option>
            <option value="AcademicManager">Academic Manager</option>
        </select>
        <span asp-validation-for="Role" class="text-danger"></span>

        <button type="submit">Login</button>
    </form>
</div>

<div class="copyright">
    <footer>
        <p>&copy; 2025 Contract Monthly Claim System. All rights reserved.</p>
    </footer>
</div>
