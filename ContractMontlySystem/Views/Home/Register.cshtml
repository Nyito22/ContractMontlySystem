@model ContractMontlySystem.Models.Register
@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<header>
    <h2 class="page-heading">Contract Monthly Claim System</h2>
</header>

<div class="LandingMessage">
    <h1>Create Your Account</h1>
    <p>Fill out the form below to register and access the system.</p>
</div>

<div class="FormContainer">
    <form asp-action="Register" method="post" class="RegisterForm">
        <p>
            Already have an account?
            <a href="@Url.Action("Index", "Home")">Click here</a> to log in
        </p>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <label asp-for="FullName"></label>
        <input asp-for="FullName" placeholder="Enter your full name" />
        <span asp-validation-for="FullName" class="text-danger"></span>

        <label asp-for="Email"></label>
        <input asp-for="Email" placeholder="Enter your email" />
        <span asp-validation-for="Email" class="text-danger"></span>

        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" placeholder="Enter your phone number" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>

        <label asp-for="Role"></label>
        <select asp-for="Role">
            <option value="">-- Choose your role --</option>
            <option value="Lecture">Lecture</option>
            <option value="ProgrammeCoordinator">Programme Coordinator</option>
            <option value="AcademicManager">Academic Manager</option>
        </select>
        <span asp-validation-for="Role" class="text-danger"></span>

        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" placeholder="Enter your password" />
        <span asp-validation-for="Password" class="text-danger"></span>

        <button type="submit">Register</button>
    </form>
</div>

<div class="copyright">
    <footer>
        <p>&copy; 2025 Contract Monthly Claim System. All rights reserved.</p>
    </footer>
</div>
